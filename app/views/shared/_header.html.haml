%header.navbar.navbar-fixed-top
  .navbar-inner
    .container
      %p#logo CV
      %nav
        %ul.nav.pull-right
          %li= link_to "Home", "#"
          - if signed_in?
            %li.dropdown
              %a.dropdown-toggle{"data-toggle" => "dropdown", 
              href:"#"}
                Account
                %b.caret
              %ul.dropdown-menu
                %li= link_to "Profile", current_user
                %li= link_to "Settings", edit_user_path(current_user)
                %li= link_to "Sign out", "/sessions/destroy", method: "delete"
          - else
            %li= link_to "Sign in", "#"
            %li.divider
            %li= link_to "Register", "#"

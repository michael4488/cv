<div class="container">
  <h1> <%= edit_user ? "Settings" : "Sign up" %> </h1>
  <%= form_for(@user) do |f|  %>
    <%= render partial: "shared/error_display", locals: {object: f.object} %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :email %>
    <%= f.text_field :email %>
    <%= f.label :date_of_birth %>
    <%= f.date_select(:dob, start_year: 1940) %>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
    <%= f.submit edit_user ? "Save" : "Sign up", class: "btn btn-large btn-block7 btn-primary" %>
  <% end %>
</div>